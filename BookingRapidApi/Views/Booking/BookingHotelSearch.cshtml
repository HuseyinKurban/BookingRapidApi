@model List<BookingRapidApi.Models.BookingHotelSearchViewModel.Hotel>

@{
    ViewData["Title"] = "Booking Hotel Search";
    Layout = "~/Views/Layout/Index.cshtml";
   
}

<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Arama Sonuçları</h2>
                @*     <div class="bt-option">
                        <a href="./home.html">Ana Sayfa</a>
                        <span>Oteller</span>
                    </div> *@
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Rooms Section Begin -->
<section class="rooms-section spad">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                string puandurumu = "Puansız";
                switch (item.property.reviewScoreWord)
                {
                    case "Excellent":
                        puandurumu = "Mükemmel";
                        break;
                    case "Very Good":
                        puandurumu = "Çok iyi";
                        break;
                    case "Wonderful":
                        puandurumu = "Şahane";
                        break;
                    case "Good":
                        puandurumu = "İyi";
                        break;
                }
                <div class="col-lg-4 col-md-6">
                    <div class="room-item">
                        <img src="@item.property.photoUrls[1]" alt="">
                        <div class="ri-text">
                            <h4>@item.property.name</h4>
                            <h3>@item.property.reviewScore / 10 <span> @puandurumu</span></h3>

                            <table>
                                <tbody>
                                    <tr>
                                        <td class="r-o">Değerlendirme Sayısı:</td>
                                        <td>@item.property.reviewCount kişi değerlendirdi</td>
                                    </tr>

                                    <tr>
                                        <td class="r-o">Giriş Tarihi:</td>
                                        <td>@(item.property.checkinDate ?? "Bilinmiyor")</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Çıkış Tarihi:</td>
                                        <td>@(item.property.checkoutDate ?? "Bilinmiyor")</td>
                                    </tr>
                                </tbody>
                            </table>
                            <a href="#" class="primary-btn">Daha fazla detay</a>
                        </div>
                    </div>
                </div>
            }
            

            <div class="col-lg-12">
                <div class="room-pagination">
                    <a href="#">1</a>
                    <a href="#">2</a>
                    <a href="#">Sonraki <i class="fa fa-long-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Rooms Section End -->