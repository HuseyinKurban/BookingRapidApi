@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Layout/Index.cshtml";
}


<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>En İyi Otel Rezervasyon Platformu</h1>
                    <p>
                        Dünya genelindeki en iyi otelleri keşfedin ve sizin için en uygun konaklama seçeneklerini
                        anında karşılaştırın. Güvenli ve kolay rezervasyon imkanıyla seyahatinizi planlamaya hemen başlayın!
                    </p>
                    <a href="#" class="primary-btn">Şimdi Keşfet</a>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>Otel Rezervasyonu Yap</h3>
                    <form method="post" class="reservation-form">
                        <div class="form-group">
                            <label for="city">Şehir:</label>
                            <input type="text" class="form-control" name="p" id="city" placeholder="Örn: İstanbul, Paris, New York" required>
                        </div>
                        <div class="form-group">
                            <label for="date-in">Giriş Tarihi:</label>
                            <input type="date" class="form-control" name="dateIn" id="date-in" required placeholder="Giriş yapacağınız tarihi seçin">
                        </div>
                        <div class="form-group">
                            <label for="date-out">Çıkış Tarihi:</label>
                            <input type="date" class="form-control" name="dateOut" id="date-out" required placeholder="Çıkış yapacağınız tarihi seçin">
                        </div>
                        <div class="form-group">
                            <label for="guest">Yetişkin Sayısı:</label>
                            <input type="number" class="form-control" name="guest" id="guest" min="1" required placeholder="Örn: 2">
                        </div>
                        <div class="form-group">
                            <label for="children">Çocuk Sayısı:</label>
                            <input type="number" class="form-control" name="children" id="children" min="0" required placeholder="Örn: 1">
                        </div>
                        <button type="submit" class="btn btn-primary">En İyİ Otelleri Ara</button>
                    </form>

                </div>
            </div>
        </div>
    </div>


    @await Component.InvokeAsync("_BookingHeroSliderComponentPartial")

    
</section>
<!-- Hero Section End -->
@await Component.InvokeAsync("_BookingAboutComponentPartial")

@await Component.InvokeAsync("_BookingServicesComponentPartial")

@await Component.InvokeAsync("_BookingHomeRoomComponentPartial")

@await Component.InvokeAsync("_BookingTestimonialComponentPartial")

@await Component.InvokeAsync("_BookingBlogSectionComponentPartial")
