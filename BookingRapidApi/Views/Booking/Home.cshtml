<!-- Header End -->
<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>Sona Lüks Otel</h1>
                    <p>
                        İşte uluslararası öneriler de dahil olmak üzere en iyi otel rezervasyon siteleri seyahat etmek ve düşük fiyatlı otel odaları bulmak için.
                    </p>
                    <a href="#" class="primary-btn">Şimdi Keşfet</a>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>Otelinizi Rezerve Edin</h3>
                    <form method="post" class="reservation-form">
                        <div class="form-group">
                            <label for="city">Şehir:</label>
                            <input type="text" class="form-control" name="p" id="city" placeholder="Şehir Giriniz :" required>
                        </div>
                        <div class="form-group">
                            <label for="date-in">Giriş Tarihi:</label>
                            <input type="date" class="form-control" name="dateIn" id="date-in" required>
                        </div>
                        <div class="form-group">
                            <label for="date-out">Çıkış Tarihi:</label>
                            <input type="date" class="form-control" name="dateOut" id="date-out" required>
                        </div>
                        <div class="form-group">
                            <label for="guest">Kişi Sayısı:</label>
                            <input type="number" class="form-control" name="guest" id="guest" min="1" required>
                        </div>
                        <div class="form-group">
                            <label for="children">Çocuk Sayısı:</label>
                            <input type="number" class="form-control" name="children" id="children" min="0" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Otel Ara</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-1.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-2.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-3.jpg"></div>
    </div>
</section>
<!-- Hero Section End -->
<!-- About Us Section Begin -->
